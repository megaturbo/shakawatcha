<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="15dp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/newlist_title"
        style="@style/Shakawatcha.BigTitle"
        android:text="@string/create_new_list"
        android:layout_centerVertical="false"/>
    <EditText
        android:id="@+id/newlist_edittext"
        android:layout_width="match_parent"
        android:hint="@string/newlist_input_hint"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newlist_title"/>
    <Button
        android:id="@+id/button_newlist_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newlist_edittext"
        android:layout_alignParentEnd="true"
        android:text="@string/create"/>

</RelativeLayout>