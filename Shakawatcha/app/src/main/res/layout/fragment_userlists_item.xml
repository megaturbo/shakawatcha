<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/userlists_list_item_listname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        tools:text="Userlist name" />

    <TextView
        android:id="@+id/userlists_list_item_number_movies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userlists_list_item_listname"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="15dp"
        tools:text="10 movies" />

    <Button
        android:id="@+id/userlists_button_delete"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@android:color/transparent"
        android:visibility="gone"
        android:drawableEnd="@android:drawable/ic_menu_delete"
        android:padding="10dp" />

</RelativeLayout>